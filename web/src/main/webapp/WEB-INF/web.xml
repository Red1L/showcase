	<!-- JMS MQ -->
	<resource-ref id="ConnectionFactory">
         <description>Topic Connection Factory</description>
         <res-ref-name>jms/ShowcaseConnectionFactory</res-ref-name>
         <res-type>javax.jms.QueueConnectionFactory</res-type>
         <res-auth>Container</res-auth>
    </resource-ref>
    <resource-ref id="Queue">
        <description>Queue</description>
        <res-ref-name>jms/HelloQueue</res-ref-name>
        <res-type>javax.jms.Queue</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>
</web-app>


